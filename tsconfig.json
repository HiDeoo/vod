{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "lib",
    "target": "ES2017",
    "lib": ["esnext"],
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitReturns": true
  },
  "include": ["src"]
}
