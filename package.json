{
  "name": "vod",
  "version": "0.0.1",
  "description": "Twitch VODs Downloader",
  "author": "HiDeoo",
  "license": "MIT",
  "private": true,
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node lib",
    "dev": "tsc && tsc -w",
    "lint": "eslint --max-warnings=0 --ext .ts src && tsc --noEmit"
  },
  "dependencies": {
    "dotenv-flow": "3.1.0",
    "inquirer": "7.0.1",
    "node-fetch": "2.6.0",
    "ora": "4.0.3"
  },
  "devDependencies": {
    "@types/dotenv-flow": "3.0.0",
    "@types/inquirer": "6.5.0",
    "@types/node": "12.12.21",
    "@types/node-fetch": "2.5.4",
    "@typescript-eslint/eslint-plugin": "2.12.0",
    "@typescript-eslint/parser": "2.12.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.7.0",
    "eslint-plugin-prettier": "3.1.2",
    "husky": ">=1",
    "lint-staged": ">=8",
    "prettier": "1.19.1",
    "typescript": "3.7.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/HiDeoo/vod"
  },
  "keywords": [
    "twitch",
    "vod",
    "download"
  ],
  "bugs": {
    "url": "https://github.com/HiDeoo/vod/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
